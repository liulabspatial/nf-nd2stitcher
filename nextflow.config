workDir = "work"

params {
    runtime_opts = ""
    lsf_opts = ""
    tracedir = "${workDir}/trace"
}

timeline {
  enabled = true
  file = "${params.tracedir}/execution_timeline.html"
  overwrite = true
}
report {
  enabled = true
  file = "${params.tracedir}/execution_report.html"
  overwrite = true
}
trace {
  enabled = true
  file = "${params.tracedir}/execution_trace.txt"
  overwrite = true
}
dag {
  enabled = true
  file = "${params.tracedir}/pipeline_dag.svg"
  overwrite = true
}

manifest {
    defaultBranch = "main"
    name = 'ND2 Stitching Pipeline'
    author = 'Takashi Kawase'
    homePage = 'https://github.com/JaneliaSciComp/ND2-Stitching-Pipeline'
    description = 'A nextflow pipeline for ND2 stitching'
    mainScript = 'nd2n5/nd2n5.nf'
    nextflowVersion = '>=20.10.0'
    version = '0.1.0'
}

profiles {
  
    debug { 
        process.beforeScript = 'echo $HOSTNAME' 
    }

    standard {
        docker.enabled = false
        singularity.enabled = true
    }

    localdocker {
        docker.enabled = true
        singularity.enabled = false
    }

    aws {
        docker.enabled = true
        singularity.enabled = false
        aws {
            batch.cliPath = '/home/ec2-user/miniconda/bin/aws'
        }
        process {
            executor = 'awsbatch'
            queue = 'janelia-nextflow-tower-connect'
        }
    }

    tower {
        docker.enabled = true
        singularity.enabled = false
        aws {
            batch.cliPath = '/home/ec2-user/miniconda/bin/aws'
        }
    }

    lsf {
        process {
            executor = 'lsf'
            clusterOptions = '-P scicompsoft'
        }
        docker.enabled = false
        singularity.enabled = true
    }
}

executor {
    queueSize = 1000
    pollInterval = "2 sec"
    //queueStatInterval = "6 sec"
}

docker {
    temp = "auto"
    runOptions = "${params.runtime_opts}"
}

singularity {
    autoMounts = true
    cacheDir = ".singularity_cache"
    runOptions = "${params.runtime_opts}"
}

